  <property name="project.jdk.home" value="${jdk.home.11.0.4}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11.0.4}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11.0.4"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath"/>
  
  <path id="library.lib1.classpath"/>
  
  <path id="library.lib2.classpath">
    <pathelement location="${basedir}/lib/jackson-annotations-2.11.0.jar"/>
    <pathelement location="${basedir}/lib/jackson-core-2.11.0.jar"/>
    <pathelement location="${basedir}/lib/jackson-databind-2.11.0.jar"/>
    <pathelement location="${basedir}/lib/javafx-swt.jar"/>
    <pathelement location="${basedir}/lib/javafx.base.jar"/>
    <pathelement location="${basedir}/lib/javafx.controls.jar"/>
    <pathelement location="${basedir}/lib/javafx.fxml.jar"/>
    <pathelement location="${basedir}/lib/javafx.graphics.jar"/>
    <pathelement location="${basedir}/lib/javafx.media.jar"/>
    <pathelement location="${basedir}/lib/javafx.swing.jar"/>
    <pathelement location="${basedir}/lib/javafx.web.jar"/>
    <pathelement location="${basedir}/lib/postgresql-42.2.11.jre6.jar"/>
    <pathelement location="${basedir}/lib/src.zip"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_hr-monitor.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.hr-monitor" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.hr-monitor" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>